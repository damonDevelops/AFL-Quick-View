{
  "manifest_version": 3,
  "name": "AFL Quick View",
  "version": "1.0",
  "description": "A chrome extension to quickly view AFL information such as matches, fixtures and the ladder.",
  "icons": {
      "16": "images/16.png",
      "48": "images/48.png",
      "128": "images/128.png"
  },
  "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "https://api.squiggle.com.au/"
  ],
  "host_permissions": [
      "https://api.squiggle.com.au/",
      "https://api.squiggle.com.au/sse/test"
  ],
  "action": {
      "default_popup": "popup.html"
  }
}
